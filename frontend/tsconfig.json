{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./public/dist/build/",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "allowJs": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "public/dist"
  ],
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}
